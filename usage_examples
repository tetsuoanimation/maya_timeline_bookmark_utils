import timelineBookmarks as tbm
from importlib import reload
reload(tbm)

# snippets
# collect bookmarks in scene
bookmarks = tbm.get_maya_bookmarks()

# frame first bookmark
bookmarks[0].frame()

# save the first two bookmarks as separate scenes
tbm.split_bookmarks_to_scenes(bookmarks[:2], scene_name="Bookmark_Split", force=True)

# export bookmarks to file
tbm.export_bookmarks(bookmarks)

# import bookmars from file
imported_bookmarks = tbm.import_bookmarks()
[bm.create_maya_node(update_existing=True) for bm in imported_bookmarks] # create manually

# alternatively you can create on load - here we are force overriding existing nodes
imported_bookmarks = tbm.import_bookmarks(create_nodes=True, force_creation=True)
